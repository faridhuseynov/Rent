@model IEnumerable<Rent.ViewModels.ProductViewModels.ProductDetailsViewModel>

@{
    ViewData["Title"] = "Products";
}

<div class="container-fluid mt-5">
    <a class="btn btn-outline-warning mb-4" asp-area="Admin" asp-controller="Home" asp-action="ActiveProducts">Active products</a>
    <a class="btn btn-danger mb-4" asp-area="Admin" asp-controller="Home" asp-action="BlockedProducts">Blocked products</a>

    @if (!Model.Any())
    {
        <h3>No blocked product...</h3>
    }

    else
    {

        @foreach (var item in ViewBag.Categories)
        {
            if (Model.Any(x => x.Subcategory.CategoryId == item.Id))
            {
                <h3 class="mb-0 mt-5">@item.CategoryName</h3>
                <hr class="mt-0" />
                <div class="row">
                    @foreach (var product in Model)
                    {
                        if (product.CategoryId == @item.Id)
                        {
                            <div class="prodcard card m-1">
                                <div class="lock" onclick="unblockProduct(this)">
                                    <div class="lock-top"></div>
                                    <div class="lock-bottom"></div>
                                    <div class="lock-center">
                                        <div class="circle"></div>
                                        <div class="triangle"></div>
                                    </div>
                                </div>
                                @if (product.MainPhotoUrl == null)
                                {
                                    <img src="~/Images/Products/default-pro.jpg" class="card-img-top card-photo" alt="...">
                                }
                                else
                                {
                                    <img src="~/Images/Products/@product.MainPhotoUrl" class="card-img-top card-photo" alt="...">
                                }
                                <div class="card-body">
                                    <input hidden value="@product.Id" />
                                    <h5 class="card-title">@product.ProductName</h5>
                                    <p class="card-text prodcard-par"><b>Owner:</b> @product.User.UserName</p>
                                    <p class="card-text prodcard-par">@product.ProductDescription</p>
                                    @if (product.Sell == true)
                                    {
                                        <h6 class="text-success">Sell: @product.SellPrice <span>AZN</span></h6>
                                    }
                                    else
                                    {
                                        <h6 class="text-success">Sell: <span>❌</span></h6>
                                    }
                                    @if (product.Lend == true)
                                    {
                                        <h6 class="text-warning">Rent: @product.LendPrice <span>AZN/day</span></h6>
                                    }
                                    else
                                    {
                                        <h6 class="text-warning">Rent: <span>❌</span></h6>
                                    }

                                    <a asp-area="" asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary"><i class="fa fa-edit"></i> Edit</a>
                                    <a href="" class="btn btn-danger deleteButton"><i class="fa fa-trash"></i> Delete</a>
                                    @*<a href="" class="btn btn-success changeBlockButton"><i class="fa fa-unlock"></i> Blockdan çıxar</a>*@
                                    @*<a asp-controller="Products" asp-route-userName="@User.Identity.Name" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Sil</a>*@
                                </div>
                            </div>
                        }
                    }
                </div>
            }
        }
    }
</div>

@section Scripts{
    <script>
        $(".deleteButton").click(function (event) {
            event.preventDefault();
            var productId = $(event.target.parentElement).find("input").val();
            var response = window.confirm("Məhsulu birdəfəlik silmək istədiyinizdən əminsinizmi?");
            if (response == true) {
                $.ajax({
                    type: "POST",
                    url: "/products/delete/",
                    data: { Id: productId },
                    success: function () {
                        location.reload(true);
                    },
                    error: function (err) {
                        console.log(err);
                    }
                })
            }
        });

        function unblockProduct(event) {
            let element = event.parentElement;
            $(element).find(".lock").addClass("lockremove-animation");
            $(element).find(".lock-top").addClass("lockopen-animation");
            var id = $(element).find(".card-body").find("input").val();
            $.ajax({
                type: "POST",
                url: "/Admin/Home/BlockAndUnblockProduct",
                data: {
                    userName: "admin@rent.com",
                    productId: id
                },
                success: setTimeout(function () {
                    $(element).remove();
                }, 2000),
                error: function (err) {
                    console.log(err);
                }
            })
        }
