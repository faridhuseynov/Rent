    <a asp-controller="Home" asp-action="Index" asp-route-id="All" class="list-group-item">All</a>
    @{
        var i = 1;
        foreach (var category in Model)
        {
            <a href="#item-@i" class="list-group-item partial-category-block" data-toggle="collapse">
                @category.CategoryName<i class="fas fa-angle-right mr-2"></i>
            </a>
            <div class="list-group collapse" id="item-@i">
                @foreach (var subcategory in category.Subcategories)
                {
                    <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-id="@subcategory.Id" class="subcategory-link">
                        @subcategory.SubcategoryName
                    </a>
                }
            </div>
            ++i;
        }
    }

