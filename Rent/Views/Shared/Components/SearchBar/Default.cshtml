@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model IEnumerable<Category>
<form>
    <select class="input-select" id="selectionList">
        @{
            var i = 0;
            foreach (var category in Model)
            {
                <option value=i id="@category.Id">@category.CategoryName</option>
                ++i;
            }
        }
    </select>
    <input class="input" placeholder="Search here" name="searchString">
    <button class="search-btn" id="searchButton" onclick="searchButtonPressed(this)">@localizer["SearchButtonText"]</button>
</form>

