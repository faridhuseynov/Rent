<form method="post">
    <select class="input-select">
        @for(int i = 0; i < ViewBag.Categories.Count; i++)
        {
            <option value="@i">@ViewBag.Categories[i]</option>

        }
    </select>
    <input class="input" placeholder="Search here" name="searchString">
    <button class="search-btn" asp-controller="Home" asp-action="Index">Search</button>
</form>