@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model IEnumerable<WishListProduct>

<div>
    <a asp-area="" asp-controller="Home" asp-action="Wishlist" asp-route-userName="@User.Identity.Name">
        <i class="fa fa-heart"></i>
        <span>@localizer["WishListIconLabel"]</span>
        @if (Model.Count() == 0)
        {
            <input id="wishListCount" class="qty" hidden value="@Model.Count()" />
        }
        else
        {
            <input id="wishListCount" class="qty" value="@Model.Count()" />
        }
    </a>
</div>