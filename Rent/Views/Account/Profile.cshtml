                </div>
            </div>
            <div class="col-md-9">
                <div class="profile-content">
                    <div class="row" style="height:auto">

                        @foreach (var product in Model.Products)
                        {
                            <div class="card m-1" style="width: 20rem; overflow:hidden; white-space:nowrap;">
                                @if (product.MainPhotoUrl == null)
                                {
                                    <img src="~/Images/Products/default-pro.jpg" class="card-img-top" alt="...">

                                }
                                else
                                {
                                    <img src="~/Images/Products/@product.MainPhotoUrl" class="card-img-top" alt="...">
                                }
                                <div class="card-body">
                                    <h5 class="card-title">@product.ProductName</h5>
                                    <p class="card-text">@product.ProductDescription</p>
                                    @if (product.Sell == true)
                                    {
                                        <h6 class="text-success">Satış: @product.SellPrice <span>AZN</span></h6>
                                    }
                                    else
                                    {
                                        <h6 class="text-success">Satış: <span>❌</span></h6>

                                    }
                                    @if (product.Lend == true)
                                    {
                                        <h6 class="text-warning">Kirayə: @product.LendPrice <span>AZN/gun</span></h6>
                                    }
                                    else
                                    {
                                        <h6 class="text-warning">Kirayə: <span>❌</span></h6>

                                    }
                                    <a style="justify-content:flex-end" asp-controller="Home" asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary"><i class="fa fa-edit"> Təklif göndər</i></a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
