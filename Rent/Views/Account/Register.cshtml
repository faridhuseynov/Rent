<div class="container">
    <div class="card bg-light">
        <article class="card-body mx-auto" style="max-width: 400px;">
            <h4 class="card-title mt-3 text-center">Create Account</h4>

            @if (Model != null && Model.ExternalRegisters.Count > 0)
            {
                <form method="post" asp-action="ExternalRegister" asp-route-returnUrl="@Model.ReturnUrl">
                    @foreach (var provider in Model.ExternalRegisters)
                    {
                        <p>
                            @if (provider.DisplayName == "Google")
                            {
                                <button name="provider" value="@provider.Name" class="btn btn-block btn-outline-danger"> <i class="fab fa-google-plus"></i>   Sign up via Google</button>
                            }
                            @if (provider.DisplayName == "Twitter")
                            {
                                <button name="provider" value="@provider.Name" class="btn btn-block btn-outline-info"> <i class="fab fa-twitter"></i>   Sign up via Twitter</button>
                            }
                            @if (provider.DisplayName == "Facebook")
                            {
                                <button name="provider" value="@provider.Name" class="btn btn-block btn-outline-primary"> <i class="fab fa-facebook-f"></i>   Sign up via Facebook</button>
                            }
                        </p>
                    }
                </form>
            }
            <p class="divider-text">
                <span class="bg-light">OR</span>
            </p>
            <form method="post" asp-action="Register">
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                    </div>
                </div>
                <input asp-for="ReturnUrl" value="@Model.ReturnUrl" hidden/>
                <div class="form-group input-group">
                    <input name="Name" asp-for="Name" class="form-control" placeholder="Name" type="text">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group input-group">
                    <input name="Surname" asp-for="Surname" class="form-control" placeholder="Surname" type="text">
                    <span asp-validation-for="Surname" class="text-danger"></span>

                </div>
                <div class="form-group input-group">
                    <input name="Username" asp-for="Username" class="form-control" placeholder="Username" type="text">
                    <span asp-validation-for="Username" class="text-danger"></span>

                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                    </div>
                    <input name="Email" asp-for="Email" class="form-control" placeholder="Email address" type="email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                @*<div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-phone"></i> </span>
                        </div>
                        <select class="custom-select" style="max-width: 120px;">
                            <option selected="">+971</option>
