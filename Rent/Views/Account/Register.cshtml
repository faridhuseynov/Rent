                        <input name="PhoneNumber" class="form-control" placeholder="Phone number" type="text">
                    </div>*@
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                    </div>
                    <input name="Password" asp-for="Password" class="form-control" placeholder="Create password" type="password">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                    </div>
                    <input name="ConfirmPassword" asp-for="ConfirmPassword" class="form-control" placeholder="Repeat password" type="password">
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block"> Create Account  </button>
                </div>
                <p class="text-center">Have an account? <a asp-controller="Account" asp-action="Login">Log In</a> </p>
            </form>
        </article>
    </div>
</div>
